<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edit_text1">

    <Button
        android:id="@+id/button_report"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_white"
        android:drawableBottom="@drawable/ic_baseline_download_24"
        android:gravity="center_horizontal"
        android:text="Report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_synopsis"
        android:layout_width="96dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_white"
        android:drawableBottom="@drawable/ic_baseline_download_24"
        android:gravity="center_horizontal"
        android:text="Synopsis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_abstract"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_white"
        android:drawableBottom="@drawable/ic_baseline_download_24"
        android:gravity="center_horizontal"
        android:text="Abstract"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_mail_id"
        android:layout_width="162dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/textView_project_name"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_project_name"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageButton_approval"
        android:layout_width="104dp"
        android:layout_height="54dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/rounded_white"
        android:drawableBottom="@drawable/ic_two_tone_check_circle_24"
        android:gravity="center_horizontal"
        android:text="ACCEPT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageButton_cancel"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/rounded_white"
        android:drawableBottom="@drawable/ic_two_tone_cancel_24"
        android:gravity="center_horizontal"
        android:text="REJECT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.778"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextMultiLine_Review"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Review"
        android:textAlignment="center"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>