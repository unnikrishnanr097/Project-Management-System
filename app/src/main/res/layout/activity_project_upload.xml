    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_synopsis"
        android:layout_width="409dp"
        android:layout_height="49dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="1dp"
        android:paddingStart="6dp"
        app:cardBackgroundColor="#F3E4E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"

        app:layout_constraintTop_toBottomOf="@+id/textView_heading">

        <TextView
            android:id="@+id/textView_synopsis"
            android:layout_width="68dp"
            android:layout_height="31dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Synopsis: "
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/synopsis_upload_button"
            android:layout_width="96dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/ic_baseline_cloud_upload_24" />

        <ImageView
            android:id="@+id/imageView_synopsis"
            android:layout_width="67dp"
            android:layout_height="35dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="4dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/success1" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_abstract"
        android:layout_width="409dp"
        android:layout_height="49dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:paddingStart="6dp"
        android:visibility="invisible"
        app:cardBackgroundColor="#F3E4E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_synopsis">

        <TextView
            android:id="@+id/textView_abstract"
            android:layout_width="68dp"
            android:layout_height="31dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Abstract: "

            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/abstract_upload_button"
            android:layout_width="96dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/ic_baseline_cloud_upload_24" />

        <ImageView
            android:id="@+id/imageView_abstract"
            android:layout_width="67dp"
            android:layout_height="35dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="4dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/success1" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_report"
        android:layout_width="409dp"
        android:layout_height="49dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="1dp"
        android:paddingStart="6dp"

        android:visibility="invisible"
        app:cardBackgroundColor="#F3E4E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_abstract">

        <TextView
            android:id="@+id/textView_report"
            android:layout_width="68dp"
            android:layout_height="31dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Report: "
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/report_upload_button"
            android:layout_width="96dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/ic_baseline_cloud_upload_24" />

        <ImageView
            android:id="@+id/imageView_report"
            android:layout_width="67dp"
            android:layout_height="35dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="4dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/success1" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_saveProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="#B17332"
        android:text="Save"

        android:visibility="invisible"
        app:backgroundTint="#EC6C6C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_report" />

    <EditText
        android:id="@+id/editTextProjectName"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Project Name"
        android:paddingLeft="15dp"
        android:inputType="textPersonName"
        android:background="@drawable/rounded_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_heading" />

    <EditText
        android:id="@+id/editTextSourceCodeLink"
        android:layout_width="366dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Source Code Link"
        android:background="@drawable/rounded_edit_text"
        android:paddingLeft="15dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextProjectName" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edit_text"
        android:text="NEXT"
        app:backgroundTint="#EDB478"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSourceCodeLink" />


</androidx.constraintlayout.widget.ConstraintLayout>